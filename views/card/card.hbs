<h1>Card: {{ card.name }}</h1>
<h3>Balance: ${{ card.balance }}</h3>
<h3>Card Id: {{ card._id }}</h3>

<form action="/cards/{{card._id}}?_method=PUT" method="POST">

  <label for="name">Name</label>
  <input type="text" name="name" value="{{card.name}}" />

  <label for="name">Balance</label>
  <input type="number" name="balance" value="{{card.balance}}" />
  
  <input type="submit" value="Update" />
</form>

<form action="/cards/{{card._id}}?_method=DELETE" method="POST">
  <input type="submit" value="Delete">
</form>

<a href="javascript:history.go(-1)">Go Back</a>
