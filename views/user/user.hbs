<div class="header">
  <div class="logo">
    <img src='/public/images/subwayNtrain.png' width='75px' height='75px' id='transit'>
    <h2>Transit System</h2>
  </div>
  <div class="admin">
    <h1 class="adminTitle" class="title">User: {{ user.name }}</h1>
    <form action="/user/{{user._id}}?_method=DELETE" method="POST">
      <input type="submit" value="Delete">
    </form>
  </div>
</div>

<div class="sectionUser">
  <form method="POST" action="/user/{{ user._id }}">
    <label for="name">Card Name</label>
    <input type="text" name="name" />
    <label for="balance">Balance</label>
    <input type="number" name="balance" />
    <input type="submit" value="Add Card" />
  </form>
  <br>
  <ul>
    <h1>Cards</h1>
    {{#each card}}
    <li><a href='/card/{{ _id }}'> {{ name }} Card</a><br>
      Balance: ${{ balance }}<br>
      Card Id: {{ _id }}
    </li>
    <br>
    {{/each}}
  </ul>
</div>
